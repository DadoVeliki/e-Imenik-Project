<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="#060064">
    <TextView
        android:id="@+id/naziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-Imenik"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/korIme"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:text="Korisničko ime:"
        android:fontFamily="Ariel"
        android:textColor="#ffffff"

        android:singleLine="true"
        android:textSize="20sp"
        android:layout_alignTop="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30sp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:text="david.trstenjak2@skole.hr"
        android:fontFamily="Courier New"
        android:textColor="#ffffff"
        android:singleLine="false"
        android:textSize="20sp"
        android:layout_alignTop="@+id/lozinka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50sp"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textCursorDrawable="@drawable/cursor"
        />

    <TextView
        android:id="@+id/lozinka"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:text="Lozinka:"
        android:fontFamily="Ariel"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_alignTop="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30sp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:text="123"
        android:fontFamily="Courier New"
        android:textColor="#ffffff"
        android:singleLine="false"
        android:textSize="20sp"

        android:layout_alignTop="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50sp"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textCursorDrawable="@drawable/cursor"
        />


    <Button
        android:id="@+id/login"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="nextActivity"
        android:backgroundTint="#FF0000"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/napomena"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-23dp"
        android:fontFamily="Ariel"
        android:singleLine="true"
        android:text=""
        android:textColor="#FF0000"

        android:textSize="20sp" />
</RelativeLayout>
